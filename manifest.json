{
    "manifest_version": 3,
    "name": "YouTube Shorts Blocker",
    "icons": {
      "48": "icon.png"
    },
    "version": "1.0",
    "description": "Blocks YouTube Shorts and shows inspiring quotes instead",
    "permissions": ["webNavigation", "scripting"],
    "host_permissions": ["*://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }